<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 타입 별칭 지정 -->
	<typeAliases>
		<typeAlias type="com.tis.domain.ProductVO" alias="Product" />
		<typeAlias type="com.tis.domain.CartVO" alias="Cart" />
		<typeAlias type="com.tis.domain.UserVO" alias="User" />
	</typeAliases>
	
	<!-- mapper 파일 등록 -->
	<mappers>
		<mapper resource="spring/mapper/SampleMapper.xml" />
		<mapper resource="spring/mapper/ProductMapper.xml" />
		<mapper resource="spring/mapper/CartMapper.xml" />
		<mapper resource="spring/mapper/UserMapper.xml" />
	</mappers>
</configuration>